userRouter.post("/verifyEmail", async (req, res) => {
  const { otp, email } = req.body;
  
  if (!otp || !email) {
    return res.status(400).json({ errorMessage: "OTP and email required" });
  }

  try {
    // Find OTP record
    const find = await prisma.emailVerification.findFirst({
      where: {
        email: email,
        otp: otp,
      }
    });

    if (!find) {
      return res.status(404).json({ message: "wrong otp" });
    }

    if (new Date() > find.expiresAt) {
      return res.status(404).json({ message: "otp expired" });
    }

    // Use transaction for atomic operations
    await prisma.$transaction(async (tx) => {
      await tx.emailVerification.deleteMany({
        where: {
          email: email,
          otp: otp
        }
      });
      
      await tx.user.update({
        where: {
          email
        },
        data: {
          verified: true,
        }
      });
    });

