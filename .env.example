# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?sslmode=require"

# ===== ENVIRONMENT CONFIGURATION =====
# Set to "production" for deployment, "development" for local testing
NODE_ENV="production"

# ===== FRONTEND & CORS CONFIGURATION =====
# Primary frontend URL (for production)
FRONTEND_URL="https://yourdomain.com"
# Additional allowed origins (comma-separated, no spaces)
# Include all URLs where your frontend might be deployed or tested
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000,https://yourdomain.com,https://your-netlify-app.netlify.app"

# Application Secrets
userSecret="your-user-jwt-secret-here"
adminSecret="your-admin-jwt-secret-here"

# ==== DEPRECATED - No longer used (replaced by Brevo) ====
# gmail="your-gmail@gmail.com"
# appPassword="your-gmail-app-password"

# ===== BREVO EMAIL SERVICE CONFIGURATION =====
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY="your_brevo_api_key_here"
# The sender email address (must be verified in Brevo)
BREVO_SENDER_EMAIL="noreply@yourdomain.com"
# The sender name that appears in the "From" field (e.g., "Go Gantabya", "Your Company Name")
BREVO_SENDER_NAME="Go Gantabya"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Razorpay Configuration (Indian users)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-secret"

# eSewa Configuration (Nepali users)
ESEWA_MERCHANT_ID="your-merchant-id"
ESEWA_PUBLIC_KEY="your-merchant-id"
ESEWA_SECRET_KEY="your-secret-key"
ESEWA_PRODUCT_CODE="your-product-code"
ESEWA_SUCCESS_URL="http://localhost:5173/payment/esewa/success"
ESEWA_FAILURE_URL="http://localhost:5173/payment/esewa/failure"
ESEWA_ENDPOINT="https://rc-epay.esewa.com.np/api/epay/main/v2/form"
ESEWA_VERIFICATION_ENDPOINT="https://rc-epay.esewa.com.np/api/epay/transaction/status/?product_code={code}&total_amount={amount}&transaction_uuid={uuid}"

# Currency Conversion Rate
NPR_TO_INR_RATE="0.625"

